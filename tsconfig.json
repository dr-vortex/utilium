{
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "NodeNext",
		"target": "ES2020",
		"moduleResolution": "NodeNext",
		"outDir": "dist",
		"typeRoots": ["node_modules/@types"],
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noImplicitThis": true,
		"declaration": true,
		"experimentalDecorators": true
	},
	"typedocOptions": {
		"entryPoints": ["src/index.ts"],
		"out": "docs"
	},
	"include": ["./src/**/*.ts"],
	"exclude": ["node_modules"]
}
